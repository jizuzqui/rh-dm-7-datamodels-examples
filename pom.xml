    <build>
        <plugins>
            <plugin>
                <!-- create the source assemblies -->
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>${maven-assembly-plugin.version}</version>
                <configuration>
                    <descriptors>
                        <descriptor>src/main/assembly/src.xml</descriptor>
                    </descriptors>
                    <tarLongFileMode>gnu</tarLongFileMode>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id> <!-- this is used for inheritance merges -->
                        <phase>package</phase> <!-- bind to the packaging phase -->
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${maven-compiler-plugin.version}</version>
                <inherited>true</inherited>
                <configuration>
                    <source>${compiler.source}</source>
                    <target>${compiler.target}</target>
                    <compilerArgs>
                        <arg>-Xlint:unchecked</arg>
                        <!-- <arg>-Xlint:deprecated</arg> -->
                    </compilerArgs>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>${maven-jar-plugin.version}</version>
                <configuration>
                    <archive>
                        <manifestEntries>
                            <Created-By>Red Hat</Created-By>
                            <Implementation-BuildTime>${maven.build.timestamp}</Implementation-BuildTime>
                            <version-app>${project.version}</version-app>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencyManagement>
        <dependencies>
            <!-- https://access.redhat.com/solutions/3363991 -->
            <dependency>
                <groupId>com.redhat.ba</groupId>
                <artifactId>ba-platform-bom</artifactId>
                <version>${ba-platform-bom.version}</version>
                <scope>import</scope>
                <type>pom</type>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <profiles>
        <profile>
            <id>jaxb</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>jaxb2-maven-plugin</artifactId>
                        <version>${jaxb2-maven-plugin.version}</version>
                        <executions>
                            <execution>
                                <id>xjc-schema1</id>
                                <goals>
                                    <goal>xjc</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${basedir}/src/main/java</outputDirectory>
                                    <noGeneratedHeaderComments>true</noGeneratedHeaderComments>
                                    <generateEpisode>false</generateEpisode>
                                    <clearOutputDir>false</clearOutputDir>
                                    <verbose>true</verbose>
                                    <extension>true</extension>
                                    <enableIntrospection>true</enableIntrospection>
                                    <sources>
                                        <source>${project.basedir}/src/main/xsd</source>
                                    </sources>
                                    <xjbSources>
                                        <xjbSource>${project.basedir}/src/main/xjb/binding.xjb</xjbSource>
                                    </xjbSources>
                                    <arguments>
                                        <argument>-Xannotate</argument>
                                    </arguments>
                                    <failOnNoSchemas>false</failOnNoSchemas>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>jaxb2</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.jvnet.jaxb2.maven2</groupId>
                        <artifactId>maven-jaxb22-plugin</artifactId>
                        <version>${maven-jaxb22-plugin.version}</version>
                        <configuration>
                            <schemaLanguage>XMLSCHEMA</schemaLanguage>
                            <schemaDirectory>${basedir}/src/main/xsd</schemaDirectory>
                            <generateDirectory>${basedir}/src/main/java</generateDirectory>
                            <episodeFile>${project.build.directory}/META-INF/sun-jaxb.episode</episodeFile>
                            <bindingDirectory>${basedir}/src/main/xjb</bindingDirectory>
                            <forceRegenerate>false</forceRegenerate>
                            <verbose>true</verbose>
                            <noFileHeader>true</noFileHeader>
                            <specVersion>2.2</specVersion>
                            <episode>true</episode>
                            <useDependenciesAsEpisodes>true</useDependenciesAsEpisodes>
                            <extension>true</extension>
                            <markGenerated>false</markGenerated>
                            <args>
                                <arg>-Xannotate</arg>
                                <arg>-Xboolean-getter</arg>
                                <arg>-Xsetters-mode=direct</arg>
                                <arg>-Xsetters</arg>
                                <!-- <arg>-Xcopyable</arg> <arg>-XtoString</arg> <arg>-Xequals</arg> <arg>-XhashCode</arg> <arg>-Xpof</arg> <arg>-Xmergeable</arg> -->
                            </args>
                        </configuration>
                        <executions>
                            <execution>
                                <id>generate-entities</id>
                                <goals>
                                    <goal>generate</goal>
                                </goals>
                                <configuration>
                                    <schemaIncludes>
                                        <include>model.xsd</include>
                                    </schemaIncludes>
                                    <bindingIncludes>
                                        <include>*.xml</include>
                                        <include>*.xjb</include>
                                    </bindingIncludes>
                                    <extension>true</extension>
                                    <plugins>
                                        <plugin>
                                            <groupId>org.jvnet.jaxb2_commons</groupId>
                                            <artifactId>jaxb2-basics</artifactId>
                                            <version>0.6.0</version>
                                        </plugin>
                                        <dependency>
                                            <groupId>org.jvnet.jaxb2_commons</groupId>
                                            <artifactId>jaxb2-namespace-prefix</artifactId>
                                            <version>1.3</version>
                                        </dependency>
                                        <plugin>
                                            <groupId>org.jvnet.jaxb2_commons</groupId>
                                            <artifactId>jaxb2-basics-annotate</artifactId>
                                            <version>${jaxb2-basics-annotate.version}</version>
                                        </plugin>
                                        <plugin>
                                            <groupId>com.github.sanity4j</groupId>
                                            <artifactId>jaxb-booleangetter-plugin</artifactId>
                                            <version>1.0</version>
                                        </plugin>
                                        <!-- plugin> <groupId>net.sf.sanity4j</groupId> <artifactId>jaxb-booleangetter-plugin</artifactId> <version>${jaxb-booleangetter-plugin.version}</version>
                                            </plugin -->
                                    </plugins>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>tests</id>
            <build>
                <testResources>
                    <testResource>
                        <directory>${basedir}/src/test/resources</directory>
                        <filtering>true</filtering>
                    </testResource>
                </testResources>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <version>${maven-surefire-plugin.version}</version>
                        <configuration>
                            <suiteXmlFiles>
                                <suiteXmlFile>${project.build.testOutputDirectory}/testng/testng.xml</suiteXmlFile>
                            </suiteXmlFiles>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
            <properties>
                <maven.test.skip>false</maven.test.skip>
            </properties>
        </profile>
        <profile>
            <id>cep01</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>${exec-maven-plugin.version}</version>
                        <executions>
                            <execution>
                                <phase>install</phase>
                                <goals>
                                    <goal>java</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <mainClass>com.redhat.emea.es.lab.kie.test.App</mainClass>
                            <classpathScope>test</classpathScope>
                            <systemProperties>
                                <!-- To test
                                <property>
                                    <key>kie.maven.offline.force</key>
                                    <value>true</value>
                                </property>
                                <property>
                                    <key>kie.maven.settings.custom</key>
                                    <value>${base.dir}/src/test/resources/maven/custom-maven-settings-offline.xml</value>
                                </property> -->
                            </systemProperties>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
