    </organization>
    <developers>
        <developer>
            <name>Antonio Arjona</name>
            <email>aarjona@redhat.com</email>
            <organization>Red Hat</organization>
            <organizationUrl>http://www.redhat.com/</organizationUrl>
            <roles>
                <role>Architect</role>
                <role>Developer</role>
